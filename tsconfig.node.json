{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ui/*": [
        "./src/UI/*"
      ]
    },
  },
  "include": [
    "vite.config.ts",
    "src/entry-server.ts",
    "src/vite-env.d.ts",
    "src/main.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.json",
    "src/views/index.ts",
    "src/views/components/index.ts"
  ],
}
